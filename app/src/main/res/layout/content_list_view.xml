<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
    tools:context="com.example.rucha.loginact.ListViewActivity"
    tools:showIn="@layout/activity_list_view">


    <EditText
        android:id="@+id/txtSelectItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:inputType="textFilter"
        android:hint="Type search text"
        android:maxLines="1" />

    <ListView
        android:id="@+id/listviewCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtSelectItem"/>

</android.support.constraint.ConstraintLayout>
